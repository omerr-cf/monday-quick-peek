{
  "manifest_version": 3,
  "name": "Monday Quick Peek",
  "version": "1.0.0",
  "description": "Instantly preview Monday.com task notes and comments on hover - no clicking required!",

  "permissions": ["storage", "activeTab"],

  "host_permissions": ["https://*.monday.com/*"],

  "background": {
    "service_worker": "scripts/background.js"
  },

  "content_scripts": [
    {
      "matches": ["https://*.monday.com/*"],
      "js": [
        "scripts/errorHandler.js",
        "scripts/usageTracker.js",
        "scripts/content.js"
      ],
      "css": ["styles/content.css"],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],

  "action": {
    "default_popup": "popup.html",
    "default_title": "Monday Quick Peek",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
